{
  "name": "spark-vision-backend",
  "version": "1.0.0",
  "private": true,
  "description": "NestJS backend API for Spark Vision",
  "scripts": {
    "dev": "nest start --watch",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "node -e \"const fs=require('fs'); ['dist','tsconfig.build.tsbuildinfo','tsconfig.tsbuildinfo'].forEach((p)=>fs.rmSync(p,{ recursive: true, force: true }));\" && nest build",
    "typecheck": "tsc --noEmit",
    "test:auth-tracking": "node --import tsx --test tests/auth-tracking.test.ts",
    "migrate:auth-tracking": "node scripts/migrate-auth-tracking.mjs",
    "optimize:indexes": "node scripts/optimize-source-indexes.mjs"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cache-manager": "^7.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "iterare": "1.2.1",
    "mongodb": "^6.8.0",
    "nest-winston": "^1.10.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24",
    "winston": "^3.18.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@angular-devkit/core": "^19.2.19",
    "@angular-devkit/schematics": "^19.2.19",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  }
}
